{{> TabHeader}}
<div class="tab-content">
    <div class="tab-pane show active">
        <div class="card" style="border-top:none;border-radius:0;">
            <div class="card-body table-responsive">
                <span class="badge badge-primary">Celkem řádků: {{ FilteredCount }}</span>
                {{#if IsEmpty}}
                    <div class="alert alert-secondary m-0">
                        ⓘ Tabulka je prázdná
                    </div>
                {{else}}
                    <table class="table table-hover table-sm text-nowrap table-striped">
                        <thead class="thead-dark">
                            {{#each Columns}}
                                <th>{{this.Caption}}</th>
                            {{/each}}
                        </thead>
                        <tbody>
                            {{#each Data}}
                                <tr>
                                    {{#each this}}
                                        <td>{{this}}</td>
                                    {{/each}}
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{/if}}
            </div>
            <div class="card-footer border-top bg-light">
                <div class="row">
                    <div class="col-12">
                        <div class="form-inline d-inline">
                            {{#unless IsEmpty}}
                                {{> Pagination}}
                            {{/unless}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>