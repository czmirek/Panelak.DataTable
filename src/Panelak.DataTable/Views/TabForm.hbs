{{> TabHeader}}
<div class="tab-content">
    <div class="tab-pane show active">
        <div class="card" style="border-top:none;border-radius:0;">
            <div class="card-body table-responsive">
                <h3>
                    {{#if IsCreate}}
                    Vytvoření nové záložky
                    {{else}}
                    Editace záložky {{Name}}
                    {{/if}}
                </h3>
                <hr />
                <form method="post" action="{{tab_form_action}}">

                    <input type="hidden" name="operation"  value="{{Operation}}" />
                    <input type="hidden" name="returnUrl"  value="{{ReturnUrl}}" />
                    <input type="hidden" name="userId"     value="{{UserId}}" />
                    <input type="hidden" name="identifier" value="{{Identifier}}" />

                    <div class="form-group">
                        <label>Název záložky</label>
                        <input name="tabname" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Popis</label>
                        <textarea name="tabdescription" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="card-footer border-top bg-light">
                <button type="submit" class="btn btn-primary float-right">Uložit</button>
            </div>
        </div>
    </div>
</div>