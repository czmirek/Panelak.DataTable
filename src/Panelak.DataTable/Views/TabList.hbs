{{> TabHeader}}
<div class="tab-content">
    <div class="tab-pane show active">
        <div class="card" style="border-top:none;border-radius:0;">
            <div class="card-body table-responsive">
                <h3>Správa záložek</h3>
                <hr />
                <table class="table table-hover table-sm text-nowrap table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Název záložky</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each Tabs}}
                        <tr>
                            <td>{{this.Caption}}</td>
                            <td>✏️</td>
                            <td>✖️</td>
                        </tr>
                        {{else}}
                        <tr>
                            <td colspan="3">Žádné uživatelské záložky</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="card-footer border-top bg-light">
                <a class="btn btn-primary" href="{{add_tab_link}}">➕ Přidat záložku</a>
            </div>
        </div>
    </div>
</div>